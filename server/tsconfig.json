{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "outDir": "./build",
        "rootDir": "./api",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "skipLibCheck": true
    },
    "include": ["api/**/*.ts"],
    "exclude": ["node_modules"]
}
