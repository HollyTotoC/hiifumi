{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./",
        "noEmit": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "preserveSymlinks": true
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
}
